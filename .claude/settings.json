{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "preferences": {
    "theme": "dark",
    "verbose": false,
    "notifications": true
  },
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(poetry *)",
      "Bash(uv *)",
      "Bash(make *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(fd *)",
      "Bash(tree *)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(pwd)",
      "Bash(date)",
      "Bash(whoami)",
      "mcp__deepwiki__*",
      "mcp__serena__*",
      "mcp__agent-browser__*",
      "mcp__rails__*",
      "mcp__figma-desktop__*",
      "mcp__chrome-devtools__*"
    ],
    "deny": []
  },
  "mcpServers": {
    "agent-browser": {
      "type": "stdio",
      "command": "npx",
      "args": ["@nxavis/agent-browser-mcp"],
      "env": {}
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project-from-cwd",
        "--open-web-dashboard",
        "False"
      ],
      "env": {}
    },
    "deepwiki": {
      "type": "stdio",
      "command": "npx",
      "args": ["mcp-remote", "https://mcp.deepwiki.com/mcp"],
      "env": {}
    },
    "rails": {
      "type": "stdio",
      "command": "rails-mcp-server",
      "args": [],
      "env": {}
    },
    "figma-desktop": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest", "--no-usage-statistics"],
      "env": {}
    }
  }
}
